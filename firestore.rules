rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /dailyActivities/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /medications/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /hydration/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /hydrationLogs/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow access to user preferences
    match /userPreferences/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow access to families (for future family features)
    match /families/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
