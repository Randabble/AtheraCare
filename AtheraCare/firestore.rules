rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Medications - users can only access their own
    match /medications/{medicationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Hydration logs - users can only access their own
    match /hydration/{hydrationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Families - members can read, creators can write
    match /families/{familyId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.members[*].userId;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.creatorId;
    }
  }
}
